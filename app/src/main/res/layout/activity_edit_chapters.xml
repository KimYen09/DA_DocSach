<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".adminactivity.EditChapters"> <!-- Đặt tên Activity là EditChapterActivity -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="0dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_arrow_back_24"
            android:contentDescription="Quay lại"/>

        <TextView
            android:id="@+id/tvEditChapterTitleHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chỉnh sửa chương"
            android:fontFamily="@font/font_lexend"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginEnd="48dp" /> <!-- Khoảng cách để căn giữa tốt hơn -->
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiêu đề chương:"
        android:fontFamily="@font/font_lexend"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/edtChapterTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tiêu đề chương"
        android:fontFamily="@font/font_lexend"
        android:textSize="18sp"
        android:padding="12dp"
        android:background="@drawable/bg_edittext_rounded"
    android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nội dung chương:"
        android:fontFamily="@font/font_lexend"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/edtChapterContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Nhập nội dung chương"
        android:fontFamily="@font/font_lexend"
        android:textSize="16sp"
        android:gravity="top"
        android:padding="12dp"
        android:background="@drawable/bg_edittext_rounded"
        android:layout_marginBottom="16dp"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSaveChapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lưu chương"
        android:fontFamily="@font/font_lexend"
        android:backgroundTint="@color/novel"
        android:textColor="@color/white"
        android:paddingVertical="12dp"
        app:cornerRadius="12dp"
        app:iconGravity="textStart"
        app:iconTint="@color/white"
        android:drawablePadding="8dp" />

</LinearLayout>
