<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/ivStoryCoverAdmin"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/lgds"
            android:layout_marginEnd="12dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvStoryTitleAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên Truyện"
                android:textStyle="bold"
                android:textSize="16sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tvStoryAuthorAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tác giả: Tên tác giả"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvStoryGenreAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thể loại: Giả tưởng"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="2dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btnEditStory"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Sửa"
                    android:textSize="12sp"
                    android:backgroundTint="@color/black"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btnDeleteStory"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Xóa"
                    android:textSize="12sp"
                    android:backgroundTint="@android:color/holo_red_light"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>