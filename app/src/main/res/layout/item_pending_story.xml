<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Story Image -->
        <ImageView
            android:id="@+id/imgStory"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:background="@android:drawable/editbox_background"
            android:src="@android:drawable/ic_menu_gallery" />

        <!-- Story Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/txtStoryTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên truyện"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/txtStoryAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tác giả"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/txtStoryCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thể loại"
                android:textSize="12sp"
                android:textColor="@color/novel"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/txtStoryDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mô tả truyện..."
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/txtCreationDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngày tạo"
                android:textSize="11sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btnApprove"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="Duyệt"
                    android:textSize="12sp"
                    android:background="@color/novel"
                    android:textColor="@color/white"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/btnReject"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="Từ chối"
                    android:textSize="12sp"
                    android:background="@android:color/holo_red_light"
                    android:textColor="@color/white"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp" />

                <ImageView
                    android:id="@+id/btnViewDetails"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@android:drawable/ic_menu_info_details"
                    android:background="@android:drawable/btn_default"
                    android:padding="8dp"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
