<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/baseline_arrow_back_24"
                android:contentDescription="Quay lại"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Thêm truyện mới"
                android:textSize="25sp"
                android:fontFamily="@font/font_lexend"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:textColor="@color/black"/>


        </LinearLayout>


        <EditText
            android:id="@+id/edtTitle"
            android:fontFamily="@font/font_lexend"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Nhập tiêu đề truyện"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/edtDescription"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:fontFamily="@font/font_lexend"
            android:layout_marginBottom="16dp"
            android:hint="Nhập mô tả truyện" />

        <EditText
            android:id="@+id/edtCategory"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:fontFamily="@font/font_lexend"
            android:layout_marginBottom="16dp"
            android:hint="Nhập thể loại truyện" />

        <EditText
            android:id="@+id/edtImageUrl"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:fontFamily="@font/font_lexend"
            android:hint="Nhập URL ảnh bìa"
            android:layout_marginBottom="16dp"
            />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:id="@+id/img"
            android:src="@drawable/lgdsach"/>
        <RadioGroup
            android:id="@+id/radioGroupType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <RadioButton
                android:id="@+id/radioSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tuyển chọn"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/radioPremium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Premium"/>
        </RadioGroup>


        <Button
            android:id="@+id/btnAddStory"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:fontFamily="@font/font_lexend"
            android:backgroundTint="@color/novel"
            android:text="Đăng tải" />
    </LinearLayout>
</ScrollView>
