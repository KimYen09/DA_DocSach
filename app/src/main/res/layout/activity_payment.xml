<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="36dp"
    android:gravity="center_horizontal"
    tools:context=".premium.Payment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác Nhận Thanh Toán"
            android:textColor="#CE5A53"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/font_lexend"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tvTenGoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/font_lexend"
            tools:text="Gói đã chọn: Gói 1 Tháng"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvPhigoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/font_lexend"
            tools:text="Giá: VND 39,000"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tvThongtingoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="@font/font_lexend"
            tools:text="Chi tiết thanh toán..."
            android:layout_marginBottom="32dp"/>

        <Button
            android:id="@+id/btnXacNhan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_lexend"
            android:text="Xác Nhận và Thanh Toán"
            android:backgroundTint="@color/novel"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnHuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?attr/materialButtonOutlinedStyle"
            android:textColor="@android:color/black"
            android:fontFamily="@font/font_lexend"
            android:text="Hủy Bỏ"/>
    </LinearLayout>
