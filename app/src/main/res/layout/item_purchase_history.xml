<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/item_background_border">

    <TextView
        android:id="@+id/tvItemPackageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gói: Premium Tháng"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary" />

    <TextView
        android:id="@+id/tvItemPackagePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giá: 99.000 VNĐ"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvItemPurchaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày mua: 2023-10-27 10:30:00"
        android:textSize="12sp"
        android:textColor="?android:attr/textColorTertiary"
        android:layout_marginTop="4dp"/>
</LinearLayout>