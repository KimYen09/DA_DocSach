<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:background="@color/white"
    tools:context=".adminactivity.StatisticsActivity">

    <ImageView
        android:id="@+id/backforget"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/baseline_arrow_back_24" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thống kê ứng dụng"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/font_lexend"
        android:gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:textColor="@color/black"/>

    <!-- Các trường nhập liệu cho bộ lọc thời gian -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Năm:"
        android:textSize="16sp"
        android:fontFamily="@font/font_lexend"
        android:textColor="@color/black"
        android:layout_marginEnd="8dp"/>

    <EditText
        android:id="@+id/etFilterYear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="VD: 2024"
        android:inputType="number"
        android:maxLength="4"
        android:fontFamily="@font/font_lexend"
        android:layout_marginEnd="16dp"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Tháng:"
    android:textSize="16sp"
    android:fontFamily="@font/font_lexend"
    android:textColor="@color/black"
    android:layout_marginEnd="8dp"/>

<EditText
    android:id="@+id/etFilterMonth"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:hint="VD: 07"
    android:inputType="number"
    android:maxLength="2"
    android:fontFamily="@font/font_lexend"/>

<com.google.android.material.button.MaterialButton
    android:id="@+id/btnApplyFilter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Lọc"
    android:fontFamily="@font/font_lexend"
    android:backgroundTint="@color/novel"
    android:textColor="@color/white"
    android:layout_marginStart="16dp"
    app:cornerRadius="8dp"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp" />

</LinearLayout>

    <!-- Phần hiển thị tổng số truyện và tổng số lượt đọc (giữ lại để hiển thị số liệu cụ thể) -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_marginBottom="16dp">

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_book_list"
    android:contentDescription="Biểu tượng truyện"
    app:tint="@color/novel"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Tổng số truyện:"
    android:textSize="18sp"
    android:fontFamily="@font/font_lexend"
    android:textColor="@color/black"
    android:layout_marginStart="8dp"/>

<TextView
    android:id="@+id/tvTotalStories"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="0"
    android:textSize="20sp"
    android:textStyle="bold"
    android:fontFamily="@font/font_lexend"
    android:textColor="@color/novel"
    android:layout_marginStart="8dp"/>

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="24dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_thongke"
        android:contentDescription="Biểu tượng lượt đọc"
        app:tint="@color/novel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng số lượt đọc:"
        android:textSize="18sp"
        android:fontFamily="@font/font_lexend"
        android:textColor="@color/black"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/tvTotalViews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/font_lexend"
        android:textColor="@color/novel"
        android:layout_marginStart="8dp"/>

</LinearLayout>

    <!-- Biểu đồ BarChart từ MPAndroidChart -->
<com.github.mikephil.charting.charts.BarChart
    android:id="@+id/barChartStatistics"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginBottom="24dp"
    android:layout_marginTop="16dp"/>

<ProgressBar
    android:id="@+id/progressBarStatistics"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:visibility="gone"
    style="?android:attr/progressBarStyleLarge"/>

<com.google.android.material.button.MaterialButton
    android:id="@+id/btnRefreshStatistics"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Làm mới"
    android:fontFamily="@font/font_lexend"
    android:backgroundTint="@color/novel"
    android:textColor="@color/white"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="24dp"
    android:paddingVertical="12dp"
    app:cornerRadius="12dp"
    app:iconGravity="textStart"
    app:iconTint="@color/white"
    android:drawablePadding="8dp" />
</LinearLayout>