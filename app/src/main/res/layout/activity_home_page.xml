<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:focusable="true"
    tools:context=".account.HomePage">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/lgsach2"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Từ trang giấy đến màn hình - Mỗi con chữ là một câu chuyện!"
        android:textStyle="bold"
        android:fontFamily="@font/font_lexend"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnloginGoogle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
        android:text="Đăng nhập bằng Google"
        android:textColor="@android:color/black"
        android:fontFamily="@font/font_lexend"
        android:textStyle="bold"
        android:paddingVertical="15dp"
        android:paddingHorizontal="20dp"
        app:cornerRadius="30dp"
        app:strokeColor="#070707"
        app:strokeWidth="2dp"
        android:gravity="center"
        android:textSize="18sp"
        android:drawableLeft="@drawable/baseline_email_24" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginVertical="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#CCCCCC"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hoặc"
            android:fontFamily="@font/font_lexend"
            android:textColor="#888888"
            android:paddingHorizontal="8dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#CCCCCC" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
        android:text="Đăng nhập"
        android:fontFamily="@font/font_lexend"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:paddingVertical="15dp"
        android:paddingHorizontal="20dp"
        app:cornerRadius="30dp"
        app:strokeColor="#070707"
        app:strokeWidth="2dp"
        android:gravity="center"
        android:textSize="18sp"
        android:drawableLeft="@drawable/baseline_account_circle_24"

        />

    <Button
        android:id="@+id/btnkhach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/underlined_text"
        android:textSize="15sp"
        android:fontFamily="@font/font_lexend"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        />




</LinearLayout>