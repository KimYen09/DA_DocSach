<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header với thiết kế tương tự trang Premium -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:contentDescription="Back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="3dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lịch Sử Mua Hàng"
            android:textColor="#CE5A53"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/font_lexend"
            android:gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="46dp" />
    </LinearLayout>

    <!-- Content Area -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewPurchaseHistory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="16dp" />

        <ProgressBar
            android:id="@+id/progressBarPurchaseHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateTint="#CE5A53"
            android:visibility="gone" />

        <!-- Empty State với thiết kế đẹp hơn -->
        <LinearLayout
            android:id="@+id/layoutEmptyState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_empty_cart"
                android:alpha="0.6"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvNoPurchaseHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chưa có lịch sử mua hàng"
                android:textSize="18sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:fontFamily="@font/font_lexend"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hãy mua gói để bắt đầu trải nghiệm!"
                android:textSize="14sp"
                android:textColor="#999999"
                android:fontFamily="@font/font_lexend"
                android:gravity="center" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
